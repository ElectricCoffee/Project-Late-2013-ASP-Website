<script>
    function checkAllBoxes() {
        if ($(".master-checkbox").is(":checked"))
            $(".check").prop("checked", true);
        else
            $(".check").prop("checked", false);
    }

    function detailAction() {
        document.getElementById("detail_button")
    }

    function editAction() {
        // document.getElementById("start").value = 
    }
</script>


<header>
    <h2>@ViewBag.Title</h2>
</header>

<div class="booking-table">
    <form action="/PossibleBooking/table">
        <table border="1" id="table">
            <tr>
                <th><input type="checkbox" onclick="checkAllBoxes()" class="master-checkbox"/></th>
                <th>Fag</th>
                <th>Starttid</th>
                <th>Sluttid</th>
            </tr>
            @foreach (var e in ViewBag.Bookings)
            { 
            <tr>
                <td><input type="checkbox" class="check"/></td>
                <td>@e.Subject</td>
                <td>@e.StartDate</td>
                <td>@e.EndDate</td>
            </tr>
            }
        </table>
        <input type="button" onclick="detailAction()", id="detail_button" value="Detaljer" />
        <input type="button" value="Redigér" />
        <input type="submit" value="Slet" />
    </form>
</div>

<div class="input-field">
    <form method="post" action="/PossibleBooking/input">
        <label for="StartBox">Start Tid: (åååå/mm/dd tt:mm)</label>
        <input type="text" name="StartBox" id="start"/>

        <label for="EndBox">Slut Tid: (åååå/mm/dd tt:mm)</label>
        <input type="text" name="EndBox" id="end"/>

        <label for="SubjectBox">Fag: </label>
        <input type="text" name="SubjectBox" id="subject"/>

        <!--<input type="submit" value="Ryd"   name="input_button"/>-->
        <input type="submit" value="Opret" />
    </form>
</div>