<link href="~/Content/themes/Styles/StyleSheetPossibleBooking.css" rel="stylesheet" type="text/css">
<div class="main-content">
    <div class="input-field">
        <form method="post" action="/PossibleBooking/input">
            <input type="hidden" name="Id" class="input_id"/>

            <p>
            <label for="Date">Dato:</label>
            <input type="date" name="Date" class="input_date" value="2013-11-28">
            </p>

            <p>
            <label for="StartTime">Fra:</label>
            <input type="time" name="StartTime" class="input_start_time">
            </p>

            <p>
            <label for="EndTime">Til:</label>
            <input type="time" name="EndTime" class="input_end_time">
            </p>

            <p>
            <label for="SubjectBox">Fag: </label>
            <input type="text" name="SubjectBox" id="subject" class="input_subject"/>
            </p>

            <!--<input type="submit" value="Ryd"   name="input_button"/>-->
            <input id="submit-btn" type="submit" value="Opret" />
        </form>
    </div>
    <hr />
    <div class="table-content">
        <form action="/PossibleBooking/table">
            <table border="1" class="table">
                <tr>
                    <th><input type="checkbox" onclick="checkAllBoxes()" class="master-checkbox"/></th>
                    <th>ID</th>
                    <th>Fag</th>
                    <th>Dato</th>
                    <th>Fra</th>
                    <th>Til</th>
                    <th>Varighed</th>
                </tr>
                @foreach (var e in ViewBag.Bookings)
                { 
                <tr>
                    <td><input type="checkbox" class="check"/></td>
                    <td>@e.Id</td>
                    <td>@e.Subject.Name</td>
                    <td><time datetime="@e.StartTime.Date.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)">@e.StartTime.Date.ToString("dd/MM/yyyy")</time></td>
                    <td>@e.StartTime.ToString("HH:mm")</td>
                    <td>@e.EndTime.ToString("HH:mm")</td>
                    <td></td>
                </tr>
                }
            </table>
            <div class="buttons">
                <input type="button" onclick="detailAction()" class="detail_button" value="Detaljer" />
                <input type="button" onclick="editAction()" value="Redigér" />
                <input type="submit" value="Aflys" />
                
            </div>
        </form>
    </div>  
    <div class="late">
        <label for="Late">Forsinket:</label>
        <input type="time" name="Late" class="input_late">
        <div class="lateButton">
            <input type="submit" value="Forsinket" />
        </div>
    </div>
</div>